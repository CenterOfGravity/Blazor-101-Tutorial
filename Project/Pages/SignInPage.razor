@layout EmptyLayout
@page "/SignInPage"
@inject NavigationManager NavigationManager
@inject IJSRuntime js

<img class="logo"
     src='https://upload.wikimedia.org/wikipedia/commons/thumb/a/a9/Amazon_logo.svg/1024px-Amazon_logo.svg.png' />

<div class='sign-in'>
    <h2>Iniciar Sesión.</h2>

    <EditForm Model="SignInClassModel" OnValidSubmit="SignInOnValidSubmit">
        <DataAnnotationsValidator />
        <ValidationMessage For="@(() => SignInClassModel.Email)" />
        <ValidationMessage For="@(() => SignInClassModel.Password)" />

        <label>Correo:</label>
        <InputText class="input-text" type='email' @bind-Value="SignInClassModel.Email" />


        <label>Contraseña:</label>
        <InputText class="input-text" type='password' @bind-Value="SignInClassModel.Password" />

        <input type='submit' value="Iniciar Sesión" />
    </EditForm>

    @if (DoesEmailNeedVerification)
    {
        <p class="verification_warning">
            Para Iniciar Sesión, verifique su cuenta:
            <a>enviar correo de verificación</a>
        </p>
    }

    <p> Al continuar, aceptas las
        <a> condiciones de uso</a> y 
        <a>aviso de privacidad</a>.</p>

    <p class="forgot-your-password">¿Olvidaste tu contraseña?</p>

    <div class='google-sign-in'>
        <div class="google-img" 
            style="background-image: url('data:image/png;base64,')"></div>
        <div class='google-signin-text'>Inicia Sesión con Google</div>
    </div>
</div>

<div class='create-account'>
    <div class="line">
        <h5>¿Usuario Nuevo?</h5>
    </div>
    <button class='create-account-button' @onclick="GoToSignUpPageOnClick">Crea tu cuenta</button>
</div>

@code {
    private bool DoesEmailNeedVerification;
    private SignInClassModel SignInClassModel = new SignInClassModel();
}

@*SignUpCode-Start*@
@code{
    private void GoToSignUpPageOnClick()
    {
        NavigationManager.NavigateTo("SignUpPage");
    }
}
@*SignUpCode-End*@





@*SignInCode-Start*@
@code {
    private async void SignInOnValidSubmit()
    {
        // array[IsSignedIn --> [0], IsEmailVerified --> [1]]
        bool[] array = await js.InvokeAsync<bool[]>("SignInWithEmailAndPassword", SignInClassModel.Email, SignInClassModel.Password);

        if (array[0] && array[1])
        {
            SignInClassModel.Password = string.Empty;
            NavigationManager.NavigateTo("/");
        }

        if (!array[1])
        {
            DoesEmailNeedVerification = true;
            StateHasChanged();
        }
    }
}
@*SignInCode-End*@
